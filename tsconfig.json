{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "lib": ["dom","es6"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "JavaScripts",
        "sourceMap": true
    },
    "include": [
        "TypeScripts/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}